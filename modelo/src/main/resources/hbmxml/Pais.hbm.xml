<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.qindel.webapp.modelo.entities.Pais" table="APLICACION_WEB.pais">
        <id name="idPais" type="java.lang.Integer">
            <column name="id_pais" />
            <generator class="assigned" />
        </id>
        <property name="nombrePais" type="java.lang.String">
            <column name="nombre_pais" />
        </property>
        <property name="codigoPais" type="java.lang.String">
            <column name="codigo_pais" />
        </property>
        <property name="valorPais" type="int">
            <column name="valor_pais" />
        </property>
    </class>
    
    <class name="com.qindel.webapp.modelo.entities.Ciudad" table="APLICACION_WEB.ciudad">
        <id name="id_ciudad" type="java.lang.Integer">
            <column name="id_ciudad" />
            <generator class="assigned" />
        </id>
        <property name="nombre_ciudad" type="java.lang.String">
            <column name="nombre_ciudad" />
        </property>
        <property name="valor" type="java.lang.Integer">
            <column name="valor_ciudad" />
        </property>
        <many-to-one name="pais" 
        class="com.qindel.webapp.modelo.entities.Pais" 
        column="id_pais"
        not-null="true"/>
    </class>
    
</hibernate-mapping>
