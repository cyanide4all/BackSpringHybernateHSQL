<div id="eliminarLibro" class="modal fade" tabindex="-1" role="dialog"
	aria-labelledby="eliminarLibroLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 id="eliminarLibroLabel">Eliminar Libro</h4>
			</div>
			<div class="modal-body">
				<p>
					Seguro que desea eliminar <%=titulo%>, de <%=autor%>?
				</p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
				<button type="button" class="borrar btn btn-primary">Aceptar</button>
			</div>
		</div>
	</div>
</div>